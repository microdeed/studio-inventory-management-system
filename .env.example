# Docker Compose Environment Variables
# Copy this file to .env and update with your values

# Frontend Configuration
FRONTEND_PORT=80

# Backend Configuration (used in docker-compose)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Email Configuration (optional - for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Backup Configuration (automatic database backups)
BACKUP_EMAIL_ENABLED=true
BACKUP_EMAIL_HOST=smtp.gmail.com
BACKUP_EMAIL_PORT=587
BACKUP_EMAIL_USER=your-email@gmail.com
BACKUP_EMAIL_PASSWORD=your-app-password
BACKUP_EMAIL_TO=backup-recipient@example.com
BACKUP_RETENTION_COUNT=7

# Database Configuration
# Note: DB_PATH is set in docker-compose.yml
# Database is stored in a Docker volume for persistence

# File Upload Settings
MAX_FILE_SIZE=5242880
QR_CODE_SIZE=200

# Docker Registry (for Bitbucket)
DOCKER_REGISTRY=docker.io
DOCKER_USERNAME=your-username
DOCKER_PASSWORD=your-password-or-token
IMAGE_NAME=inventory-app
